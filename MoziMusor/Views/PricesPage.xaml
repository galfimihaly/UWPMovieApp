<Page
    x:Class="MoziMusor.Views.PricesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoziMusor.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel>
                <TextBlock x:Name="JegyarakTextBlock" Text="JEGYÁRAK" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0, 10" />
                <Image x:Name="JegyarakImage" Source="ms-appx:///Images/nyitvatartas.png" Margin="10"/>
                <TextBlock x:Name="BufeTextBlock" Text="BÜFÉ" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0, 10" />
                <Image x:Name="BufeImage" Source="ms-appx:///Images/bufearak.png" Margin="10"/>
                <TextBlock x:Name="KartyakTextBlock" Text="ELFOGADHATÓ KÁRTYÁK" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0, 10" />
                <Image x:Name="KartyakImage" Source="ms-appx:///Images/kartyak.png" Margin="10"/>
            </StackPanel>
        </ScrollViewer> 
    </Grid>
</Page>
